<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginFlow.Views.HomePage"
             Title="Home">
    
    
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
    Source="gorelogo.png"
    HeightRequest="185"
    Aspect="AspectFit"
    SemanticProperties.Description="Gore Earthmoving Logo" />

            <Label
                 Text="Hello @name"
                 SemanticProperties.HeadingLevel="Level1" 
                 TextColor="White"/>


            <Button
                 x:Name="btn_timesheet"
                 Text="Timesheet" 
                 Clicked="button_Timesheet_Clicked"
                 BackgroundColor="#e37b31"
                 TextColor="Black"
                 HorizontalOptions="Fill" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>